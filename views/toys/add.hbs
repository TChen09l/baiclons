<div class="container text-center mt-3 mb-3 col-md-8">
   <form class="card bg-light ml-3 mr-3" action="/toys/add" method="post">
      <h1 class="text text-primary mt-2 mb-2">Add new toys</h1>
      <div class="form-group mt-2 mb-2">
         <label class="fw-bold" for="">Name</label>
         <input class="form-control" type="text" name="name" required>
      </div>
      <div class="form-group mt-2 mb-2">
         <label class="fw-bold" for="">Qrigin</label>
         <input class="form-control" type="text" name="origin" required>
      </div>
      <div class="form-group mt-2 mb-2">
         <label class="fw-bold" for="">Quality</label>
         <input class="form-control" type="number" name="quality" required min="1" max="999">
      </div>
      <div class="form-group mt-2 mb-2">
         <label class="fw-bold" for="">Price</label>
         <input class="form-control" type="number" name="price" required min="1" max="9999999">
      </div>
      <div class="form-group mt-2 mb-2">
         <label class="fw-bold" for="">Img</label>
         <input class="form-control" type="text" name="img" required>
      </div>
      <div class="form-group mt-2 mb-2">
         <label class="fw-bold" for="">Video</label>
         <input class="form-control" type="text" name="video" required>
      </div>
      <div class="form-group mt-2 mb-2">
         <input class="btn btn-danger" type="submit" value="Add">
      </div>
</form>
</div>
