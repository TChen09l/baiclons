<div class="container text-center">
{{!-- table.table.table-bordered>tr*3>th*7 --}}
<table class="table bordered">
   <tr>
      <th class="h2 text text-success" colspan="6">TOY LIST</th>
      <th>
         <a class="btn btn-primary" href="/toys/add">Add Toy</a>
      </th>
   </tr>
   <tr>
      <th>Name</th>
      <th>Qrigin</th>
      <th>Quality</th>
      <th>Price</th>
      <th>Img</th>
      <th>Video</th>
      <th>Menu</th>
   </tr>
   {{!-- heach --}}
   {{#each toys }}
   <tr>
      <th>{{  name }}</th>
      <th>{{ origin }}</th>
      <th>{{ quality }}</th>
      <th>{{ price }}</th>
      <th>
         <img src="{{ img }}" width="200" height="250">
      </th>
      <th>
         <iframe src="https://www.youtube.com/embed/{{ video }}" 
         width="300" height="200"></iframe>
      </th>
      <th>
         <a class="btn btn-warning" href="/toys/edit/{{_id}}">Edit</a>
         <a class="btn btn-danger" href="/toys/delete/{{_id}}"
         onclick="return confirm('Do you want to delete this toys ?');"
         >Delete</a>
      </th>
   </tr>
   {{/each}}
</table>
</div>
