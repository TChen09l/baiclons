<div class="container text-center mt-3 mb-3 col-md-8">
    <form class="card bg-light ml-3 mr-3" action="/feedback/add" method="post">
        <h1 class="text text-primary mt-2 mb-2">Add new feedback</h1>
        <div class="form-group mt-2 mb-2">
            <label class="fw-bold" for="">nameCustomer</label>
            <input class="form-control" type="text" name="NameCustomer" required>
        </div>
        <div class="form-group mt-2 mb-2">
            <label class="fw-bold" for="">phonenumber</label>
            <input class="form-control" type="number" name="Phonenumber" required min="111111111" max="999999999">
        </div>
        <div class="form-group mt-2 mb-2">
            <label class="fw-bold" for="">address</label>
            <input class="form-control" type="text" name="Address" required>
        </div>
        <div class="form-group mt-2 mb-2">
            <label class="fw-bold" for="">feedback</label>
            <input class="form-control" type="text" name="Feedback" required>
        </div>
        <div class="form-group mt-2 mb-2">
            <input class="btn btn-danger" type="submit" value="Add">
        </div>

    </form>
</div>